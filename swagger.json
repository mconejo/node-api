{
  "swagger": "2.0",
  "info": {
    "description": "Users WebAPI",
    "version": "1.0.0",
    "title": "Swagger Users"
  },
  "host": "pure-bastion-43509.herokuapp.com",
  "basePath": "/",
  "schemes": [
    "https"
  ],
  "paths": {
    "/user": {
      "post": {
        "summary": "Create user",
        "description": "Action should be restricted to Admin users",
        "operationId": "createUser",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "newUser",
            "description": "Created user object",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      },
      "get": {
        "summary": "Get full list of users",
        "description": "Action should be restricted to Admin users",
        "operationId": "getAllUsers",
        "produces": [
          "application/json"
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        }
      }
    },
    "/user/{_id}": {
      "get": {
        "summary": "Gets a specific user by ID.",
        "parameters": [
          {
            "in": "path",
            "name": "_id",
            "type": "integer",
            "required": true,
            "description": "String ID of the user to get."
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "age": {
          "type": "integer",
          "format": "int32"
        }
      }
    }
  }
}